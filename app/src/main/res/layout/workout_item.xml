<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingStart="15dp"
    android:paddingEnd="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="250dp"
        android:layout_height="157dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/workout_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:srcCompat="@tools:sample/avatars" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/section_title"
        style="@style/workoutTextRedSemiBoldTitleStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Resistance"
        app:layout_constraintStart_toStartOf="@+id/cardView"
        app:layout_constraintTop_toBottomOf="@+id/cardView"
        app:textAllCaps="true" />

    <TextView
        android:id="@+id/workout_title"
        style="@style/workoutTextBlackSemiBoldTitleStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="Shoulders and Back Blast"
        app:layout_constraintStart_toStartOf="@+id/section_title"
        app:layout_constraintTop_toBottomOf="@+id/section_title" />

    <TextView
        android:id="@+id/circuits_text_value"
        style="@style/workoutTextBlackSemiMediumTitleStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:text="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/workout_title"
        app:layout_constraintTop_toBottomOf="@+id/workout_title" />

    <TextView
        android:id="@+id/circuits_text_title"
        style="@style/workoutTextBlackSemiMediumTitleStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:text="@string/workouts_circuits_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/circuits_text_value"
        app:layout_constraintTop_toBottomOf="@+id/workout_title" />

    <TextView
        android:id="@+id/separator_one"
        style="@style/workoutTextBlackSemiMediumTitleStyle"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="5dp"
        android:gravity="center|center_horizontal"
        android:text="."
        app:layout_constraintEnd_toStartOf="@+id/exercises_text_value"
        app:layout_constraintStart_toEndOf="@+id/circuits_text_title"
        app:layout_constraintTop_toBottomOf="@+id/workout_title" />


    <TextView
        android:id="@+id/exercises_text_value"
        style="@style/workoutTextBlackSemiMediumTitleStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:text="9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/separator_one"
        app:layout_constraintTop_toBottomOf="@+id/workout_title" />

    <TextView
        android:id="@+id/exercises_text_title"
        style="@style/workoutTextBlackSemiMediumTitleStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:text="@string/workouts_exercises_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/exercises_text_value"
        app:layout_constraintTop_toBottomOf="@+id/workout_title" />

    <TextView
        android:id="@+id/separator_two"
        style="@style/workoutTextBlackSemiMediumTitleStyle"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="5dp"
        android:gravity="center|center_horizontal"
        android:text="."
        app:layout_constraintEnd_toStartOf="@+id/mins_text_value"
        app:layout_constraintStart_toEndOf="@+id/exercises_text_title"
        app:layout_constraintTop_toBottomOf="@+id/workout_title" />

    <TextView
        android:id="@+id/mins_text_value"
        style="@style/workoutTextBlackSemiMediumTitleStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:text="45-60"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/separator_two"
        app:layout_constraintTop_toBottomOf="@+id/workout_title" />

    <TextView
        android:id="@+id/mins_text_title"
        style="@style/workoutTextBlackSemiMediumTitleStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:text="@string/workouts_mins_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/mins_text_value"
        app:layout_constraintTop_toBottomOf="@+id/workout_title" />


</androidx.constraintlayout.widget.ConstraintLayout>